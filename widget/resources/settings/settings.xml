<settings>
    <setting propertyKey="@Properties.locations" title="@Strings.LocationsTitle" maxLength="3">
        <setting title="@Strings.LatitudeTitle" type="float">
            <settingConfig id="latitude" required="true" type="numeric" min="-90" max="90" errorMessage="@Strings.LatitudeRangeError" />
        </setting>
        <setting title="@Strings.LongitudeTitle" type="float">
            <settingConfig id="longitude" required="true" type="numeric" min="-180" max="180" errorMessage="@Strings.LongitudeRangeError" />
        </setting>
        <setting title="@Strings.LocationDisplayNameTitle" type="string">
            <settingConfig id="displayName" type="alphanumeric" maxLength="16" errorMessage="@Strings.LocationDisplayNameError" />
        </setting>
    </setting>
    <setting propertyKey="@Properties.customWeatherApiUrl" title="@Strings.CustomWeatherApiUrlTitle">
        <settingConfig type="url" />
    </setting>
</settings>